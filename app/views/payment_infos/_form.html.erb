<%= form_with(model: @payment_info, local: true) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.text_field :card_number, placeholder: "Card number" %>
    <%= f.text_field :card_holder, placeholder: "Card Holder" %>
    <%= f.text_field :expiration_date, placeholder: "Expiration date" %>
    <%= f.text_field :cvc, placeholder: "CVC" %>
    <%= f.submit "Add payment information" %>
<% end %>