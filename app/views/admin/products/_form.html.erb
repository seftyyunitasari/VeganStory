<div class="error_explanation">
    <% if @product.errors.any? %>
        <%= pluralize(@product.errors.count, 'error') %>
        <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
</div>

<%= form_with(model: [:admin, @product], local: true, class: "justify-content-center") do |f| %>
    <%= f.text_field :category_id, placeholder: "category: enter 1 for vegetables & 2 for fruits" %>
    <%= f.text_field :name, placeholder: "name" %>
    <%= f.text_field :price, placeholder: "price" %>
    <%= f.text_field :stock, placeholder: "stock" %>
    <%= f.text_area :description, placeholder: "description" %>
    <%= f.label :upload_product_image %>
    <%= image_tag(@product.image.url) if @product.image && @product.image.url %>
    <%= f.hidden_field :image_cache %>
    <%= f.file_field :image %>
    <%= f.submit "Submit" %>
<% end %>