<h3>Users</h3>
    <table>
        <tr>
            <td> Name </td>
            <td> Email </td>
        </tr>
        <% @user.each do |user| %>
        <tr>
            <td> <%= user.name %> </td>
            <td> <%= user.email %> </td>
            <td> <%= button_to "Delete", user_path(user.id), method: :delete %> </td>
            <td> <%= link_to "Edit", edit_admin_user_path(user.id) %> </td>
            <td> <%= link_to "Show", admin_user_path(user.id) %> </td>
            <% if user.is_admin? %>
            <td><%= button_to 'Delete admin', admin_user_path(user, is_admin: "false"), method: :put %></td>
            <% else %>
            <td><%= button_to 'Make admin', admin_user_path(user, is_admin: "true"), method: :put %></td>
            <% end %>
        </tr>
        <% end %>
    </table>